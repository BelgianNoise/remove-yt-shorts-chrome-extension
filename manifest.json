{
  "name": "Hide YT Shorts",
  "version": "0.2",
  "manifest_version": 3,
  "description": "Hide the annoying Youtube Shorts from your subscription feed for a less cluttered experience",
  "permissions": [ "activeTab", "storage" ],
  "icons": {"128": "128.png"},
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["https://www.youtube.com/feed/subscriptions"],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ]
}